// Static tasks configuration.
//
// Example:
[
  {
    "label": "lazygit",
    "command": "lazygit -p $ZED_WORKTREE_ROOT",
    "hide": "on_success",
    "shell": {
      "program": "sh"
    }
  },
  {
    "label": "lazygit_file_log",
    "command": "lazygit",
    "args": ["-f", "\"$ZED_RELATIVE_FILE\""],
    "hide": "on_success",
    "shell": {
      "program": "sh"
    }
  },
  {
    "label": "Claude Code",
    "command": "claude",
    "hide": "on_success",
    "shell": {
      "program": "fish"
    }
  }
]
