#!/usr/bin/env bash

set -o errexit   # abort on nonzero exitstatus
set -o nounset   # abort on unbound variable
set -o pipefail  # don't hide errors within pipes

function setup_ppas() {
    local ppas=("$@")

    for ppa in "${ppas[@]}";
    do
        sudo add-apt-repository -y "$ppa"
    done

    sudo apt update
}

function install_apt_packages() {
    local packages=("$@")

    for package in "${packages[@]}";
    do
        sudo apt -y install "$package"
    done
}

function install_flatpak_packages() {
    local packages=("$@")

    for package in "${packages[@]}";
    do
        flatpak -y install "$package"
    done
}

ppas=(
    ppa:unit193/encryption # veracrypt
)

core=(
    fish
    ca-certificates
    coreutils
    curl
    git
    gnupg
    openssh-client
    stow
    unzip
    neovim
    wget
)

# TODO iosevka-nerd yubikey-personalization-gui veracrypt zotero
desktop=(
    bitwarden
    calibre
    extension-manager
    mpv
    protonvpn-gui
    steam
    transmission
    ubuntu-restricted-extras
    yubikey-personalization
    zathura
)

# TODO bandwhich joshuto
shell=(
    wezterm

    atuin
    bat
    bottom
    direnv
    dog
    dust
    duf
    eza
    fd-find
    fzf
    gnupg
    htop
    httpie
    hyperfine
    jq
    lazygit
    links
    procs
    ripgrep
    rsync
    tcpdump
    tokei
    tree
    viddy
    zoxide
)

flatpak=(
    dev.zed.Zed
    com.dropbox.Client
    com.mojang.Minecraft
    com.slack.Slack
    com.spotify.Client
    md.obsidian.Obsidian
    org.signal.Signal
    com.slack.Slack
)

sudo apt update
sudo apt upgrade
flatpak update

install_apt_packages "${core[@]}"
setup_ppas "${ppas[@]}"
install_apt_packages "${shell[@]}"
install_apt_packages "${desktop[@]}"
install_flatpak_packages "${flatpak[@]}"

sudo apt clean
sudo apt autoremove --purge

# bootstrap dotfiles
mkdir -p ~/{bin,.config}
stow --target=/home/gsnewmark/bin bin
stow --dir=config --target=/home/gsnewmark browser
stow --dir=config --target=/home/gsnewmark desktop
stow --dir=config --target=/home/gsnewmark dev
stow --dir=config --target=/home/gsnewmark emacs
stow --dir=config --target=/home/gsnewmark shell

# install font
wget -P ~/.local/share/fonts https://github.com/ryanoasis/nerd-fonts/releases/download/v3.2.1/IosevkaTerm.zip \
    && cd ~/.local/share/fonts \
    && unzip IosevkaTerm.zip \
    && rm IosevkaTerm.zip \
    && fc-cache -fv

# change shell
chsh -s /usr/bin/fish
