#!/usr/bin/env bash

set -o errexit   # abort on nonzero exitstatus
set -o nounset   # abort on unbound variable
set -o pipefail  # don't hide errors within pipes

function setup_ppas() {
    local ppas=("$@")

    for ppa in "${ppas[@]}";
    do
        sudo add-apt-repository -y "$ppa"
    done

    sudo apt update
}

function install_apt_packages() {
    local packages=("$@")

    for package in "${packages[@]}";
    do
        sudo apt -y install "$package"
    done
}

function install_flatpak_packages() {
    local packages=("$@")

    for package in "${packages[@]}";
    do
        flatpak -y install "$package"
    done
}

core=(
    ca-certificates
    coreutils
    curl
    git
    gnupg
    openssh-client
    stow
    unzip
    vim
    wget
)

ppas=(
    ppa:kelleyk/emacs
    ppa:peek-developers/stable
    ppa:unit193/encryption # veracrypt
)

# TODO iosevka protonvpn
desktop=(
    emacs28-nativecomp
    flameshot
    gnome-tweaks
    peek
    steam
    ubuntu-restricted-extras
    yubikey-personalization
    zathura
)

# TODO bandwhich bottom dogdns du-dust duf hyperfine languagetool nixfmt procs sd tokei viddy
shell=(
    alacritty
    fish

    bat
    direnv
    discount
    exa
    fd-find
    fzf
    gnutls-bin
    htop
    jq
    links2
    lsof
    python3
    python3-proselint
    rclone
    ripgrep
    rsync
    time
    tree
    x11-utils
    xclip
    xdotool
    zoxide
    zstd
)

flatpak=(
    com.bitwarden.desktop
    com.calibre_ebook.calibre
    com.discordapp.Discord
    com.dropbox.Client
    com.github.johnfactotum.Foliate
    com.github.rafostar.Clapper
    com.mattjakeman.ExtensionManager
    com.mojang.Minecraft
    com.slack.Slack
    com.spotify.Client
    com.transmissionbt.Transmission
    net.brinkervii.grapejuice
    org.chromium.Chromium
    org.gimp.GIMP
    org.signal.Signal
    org.telegram.desktop
    org.zotero.Zotero
    us.zoom.Zoom
)

# TODO docker
# TODO nix + lorri

sudo apt update
sudo apt upgrade
flatpak update

install_apt_packages "${core[@]}"
setup_ppas "${ppas[@]}"
install_apt_packages "${desktop[@]}"
install_apt_packages "${shell[@]}"
install_flatpak_packages "${flatpak[@]}"

sudo apt clean
sudo apt autoremove --purge

mkdir -p ~/{bin,.config}
stow --target=/home/gsnewmark/bin bin
stow --dir=config --target=/home/gsnewmark browser
stow --dir=config --target=/home/gsnewmark desktop
stow --dir=config --target=/home/gsnewmark dev
stow --dir=config --target=/home/gsnewmark emacs
stow --dir=config --target=/home/gsnewmark shell
